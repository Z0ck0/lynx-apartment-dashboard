# Streamlit Secrets Configuration
# Copy this file to .streamlit/secrets.toml and fill in your actual values
# DO NOT commit secrets.toml to Git - it's already in .gitignore

# Email Configuration (SMTP)
# [email]
# smtp_server = "smtp.gmail.com"
# smtp_port = 587
# sender_email = "your-email@gmail.com"
# sender_password = "your-app-password"  # Use App Password for Gmail

# SendGrid (Alternative to SMTP)
# [sendgrid]
# api_key = "your-sendgrid-api-key"
# from_email = "your-email@example.com"

# Google Drive Integration
# [google_drive]
# credentials_path = "google_drive_credentials.json"

# AWS SES (if using)
# [aws]
# access_key = "your-access-key"
# secret_key = "your-secret-key"
# region = "us-east-1"
# from_email = "your-email@example.com"

# Note: For Streamlit Cloud, add these secrets via the Cloud dashboard
# Settings > Secrets, not via this file

